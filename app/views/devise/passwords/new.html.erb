    <style>
        body {
            background-color: #006DB2; /* Tu color azul personalizado */
            color: white;
        }

        .login-container {
            background-color: white;
            color: black;
            padding: 20px;
            border-radius: 5px;
        }

        /* Agregando margen superior al contenedor */
        .container-fluid {
            margin-top: 150px;
        }
    </style>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Columna para el texto "Swap Collector" y el slogan -->
            <div class="col-md-1">
            </div>

            <div class="col-md-5">
                <h1 class="display-1"><span style="font-weight: bold; color: #FFD200;">Swap</span> <span style="font-weight: bold;">Collector</span></h1>
                <p class="lead">El lugar para intercambiar los coleccionables más deseados</p>
            </div>


            <div class="col-md-1">
            </div>

            <!-- Columna para el contenedor de Login -->
            <div class="col-md-4">
                <div class="login-container">
                    <h2 class="mb-3">¿Olvidaste tu contraseña?</h2>

                        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "needs-validation", novalidate: "" }) do |f| %>
                        <%= render "devise/shared/error_messages", resource: resource %>

                        <div class="form-group mb-3">
                            <%= f.label :email, class: "form-label" %><br />
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                        </div>

                        <div class="actions">
                            <%= f.submit "Enviar intrucciones de reseteo", class: "btn btn-primary w-100" %>
                        </div>
                        <% end %>

                        <%= render "devise/shared/links" %>

                                            
                </div>
            </div>
        </div>
    </div>
</body>

