<h1>Products#show</h1>
<p>Find me in app/views/products/show.html.erb</p>
<%= @product.name %>
<%= image_tag @product.image.variant(resize_to_limit: [150, 150]) %>
<%= link_to "Volver al inicio", root_path%>

<% if user_signed_in? && current_user != @product.user && current_user.products.exists?%>
<%= link_to "Solicitud de intercambio", new_trade_offer_path(product_id: @product.id, receiver_id: @product.user.id), class: 'btn btn-primary' %>
<% else%>
    <p>Publica productos para poder intercambiar</p>
<% end%>
