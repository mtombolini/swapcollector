<header>
  <%= render "home/shared/header" %>
</header>

<div class="container mt-5">
  <h1 class="mb-4">¡Publica tu coleccionable!</h1>
  <HR>

  <%= form_with(model: @product, local: true, html: { class: "needs-validation", novalidate: "" }) do |form| %>
    <% if @product.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
        <ul>
          <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group mb-3">
      <%= form.label :Nombre, class: "form-label" %>
      <%= form.text_field :name, id: :product_name, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :Descripción, class: "form-label" %>
      <%= form.text_area :description, id: :product_description, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :Precio, class: "form-label" %>
      <%= form.number_field :price, id: :product_price, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :Indice_de_rareza, class: "form-label" %>
      <%= form.number_field :rarity, id: :product_rarity, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :user_id, class: "form-label" %>
      <%= form.number_field :user_id, id: :product_user_id, value: current_user.id, readonly: true, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :Imagen, class: "form-label" %>
      <%= form.file_field :image, id: :product_image, class: "form-control" %>
    </div>

    <div class="actions">
      <%= form.submit "Crear Producto", class: "btn btn-primary" %>
    </div>

  <% end %>
</div>
